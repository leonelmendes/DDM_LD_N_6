<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="iTask_App_Mobile.Components.EquipeComponent">
    
    <Frame BackgroundColor="White"
           CornerRadius="14"
           Padding="14"
           HasShadow="True"
           BorderColor="{StaticResource Gray100}">      
        <Grid ColumnDefinitions="Auto,*,Auto">
            <Frame WidthRequest="50" HeightRequest="50" BorderColor="Transparent" CornerRadius="25">
                <Image Source="person_1.png"
                   WidthRequest="50"
                   HeightRequest="50" />
            </Frame>

            <StackLayout Grid.Column="1" Padding="10,0" Spacing="2">
                <Label Text="{Binding Nome}"
                       FontFamily="InterSemiBold"/>
                <Label Text="{Binding NivelExperiencia}"
                       FontFamily="InterRegular"
                       FontSize="13"
                       TextColor="{StaticResource Gray600}"/>

                <HorizontalStackLayout Spacing="10" Margin="0,4,0,0">
                    <Label Text="{Binding Ativas}"
                           FontFamily="InterRegular"
                           FontSize="12"
                           TextColor="{StaticResource Gray600}"/>
                    <Label Text="{Binding Concluidas}"
                           FontFamily="InterRegular"
                           FontSize="12"
                           TextColor="Green"/>
                </HorizontalStackLayout>

                <!-- Barra de progresso -->
                <Grid Margin="0,6,0,0">
                    <BoxView HeightRequest="4"
                             CornerRadius="2"
                             BackgroundColor="{StaticResource Gray200}"/>
                    <BoxView HeightRequest="4"
                             CornerRadius="2"
                             BackgroundColor="{StaticResource Primary}"
                             WidthRequest="160"
                             HorizontalOptions="Start"/>
                </Grid>

                <Label Text="Taxa de conclusÃ£o 71%"
                       FontFamily="InterRegular"
                       FontSize="11"
                       TextColor="{StaticResource Gray600}"
                       Margin="0,2,0,0"/>
            </StackLayout>

            <Image Grid.Column="2"
                   Source="more_vert_placeholder.png"
                   WidthRequest="18"
                   HorizontalOptions="End"
                   VerticalOptions="Start"/>
        </Grid>
    </Frame>
</ContentView>
