<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="iTask_App_Mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:iTask_App_Mobile.Views"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False"
    Title="iTask_App_Mobile">


    <!-- ====================== LOGIN ====================== -->
    <ShellContent
        Route="LoginPage"
        ContentTemplate="{DataTemplate views:LoginPage}" />

    <!-- ==================== TABBAR GESTOR ==================== -->
    <TabBar x:Name="TabBar_Gestor" IsVisible="True">

        <Tab Title="Dashboard" Icon="casa.png">
            <ShellContent ContentTemplate="{DataTemplate views:DashboardGestorPage}"
                          Route="DashboardGestorPage" />
        </Tab>

        <Tab Title="Equipe" Icon="equipe.png">
            <ShellContent ContentTemplate="{DataTemplate views:EquipePage}"
                          Route="EquipePage" />
        </Tab>

        <Tab Title="RelatÃ³rios" Icon="relatorio.png">
            <ShellContent ContentTemplate="{DataTemplate views:RelatorioPage}"
                          Route="RelatorioPage" />
        </Tab>

        <Tab Title="Perfil" Icon="user.png">
            <ShellContent ContentTemplate="{DataTemplate views:PerfilPage}"
                          Route="PerfilPage" />
        </Tab>

    </TabBar>

</Shell>
