<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="iTask_App_Mobile.Views.TarefasConcluidasGestorPage"
             xmlns:vm="clr-namespace:iTask_App_Mobile.ViewModels"
             xmlns:dto="clr-namespace:iTask_App_Mobile.DTOs"
             Shell.TabBarIsVisible="False"
             Title="TarefasConcluidasGestorPage">
    
    
    <RefreshView Command="{Binding CarregarTarefasCommand}" IsRefreshing="{Binding IsLoading}">
        <StackLayout>
            <VerticalStackLayout Padding="20" Spacing="20">

                <Grid ColumnDefinitions="Auto,*" ColumnSpacing="15">
                    <ImageButton Source="voltar.png" WidthRequest="10" HeightRequest="10"
                                 Command="{Binding VoltarCommand}"
                                 HorizontalOptions="Start" VerticalOptions="Center"/>

                    <VerticalStackLayout Grid.Column="1" Spacing="2">
                        <Label Text="Relatório de Entregas" FontFamily="InterSemiBold" FontSize="20" TextColor="#111827"/>
                        <Label Text="Comparativo de prazos das tarefas criadas por mim." FontSize="12" TextColor="Gray"/>
                    </VerticalStackLayout>
                </Grid>

                <CollectionView ItemsSource="{Binding TarefasConcluidas}" >
                    <CollectionView.EmptyView>
                        <Label Text="Nenhuma tarefa concluída criada pelo gestor encontrada." 
                               TextColor="Black" HorizontalOptions="Center" Margin="0,50,0,0"/>
                    </CollectionView.EmptyView>

                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout Orientation="Vertical" ItemSpacing="10"/>
                    </CollectionView.ItemsLayout>

                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="dto:TarefaDetalhesDTO">

                            <Frame BackgroundColor="White" CornerRadius="12" Padding="15" Margin="0,0,0,12" HasShadow="True">
                                <VerticalStackLayout Spacing="8">

                                    <Grid ColumnDefinitions="*, Auto">
                                        <Label Grid.Column="0" Text="{Binding Titulo}" FontAttributes="Bold" FontSize="16" TextColor="#1F2937"/>

                                        <Frame Grid.Column="1" Padding="8,4" CornerRadius="8" BackgroundColor="#EFF6FF" BorderColor="Transparent">
                                            <Label Text="{Binding ProgramadorNome}" FontSize="11" TextColor="#2563EB" FontAttributes="Bold"/>
                                        </Frame>
                                    </Grid>

                                    <Label Text="{Binding Descricao}" FontSize="12" TextColor="#6B7280" LineBreakMode="TailTruncation" MaxLines="1"/>

                                    <BoxView HeightRequest="1" Color="#F3F4F6" Margin="0,5"/>

                                    <Grid ColumnDefinitions="*, *" RowDefinitions="Auto, Auto" ColumnSpacing="10">

                                        <Label Grid.Row="0" Grid.Column="0" Text="Previsto" FontSize="11" TextColor="#6B7280"/>
                                        <Label Grid.Row="0" Grid.Column="1" Text="Realizado" FontSize="11" TextColor="#6B7280" HorizontalOptions="End"/>

                                        <Label Grid.Row="1" Grid.Column="0" 
                                               Text="{Binding TempoPrevistoTexto}" 
                                               FontAttributes="Bold" FontSize="14" TextColor="#1F2937"/>

                                        <Label Grid.Row="1" Grid.Column="1" 
                                               Text="{Binding TempoRealTexto}" 
                                               FontAttributes="Bold" FontSize="14" TextColor="{StaticResource Primary}" 
                                               HorizontalOptions="End"/>
                                    </Grid>

                                </VerticalStackLayout>
                            </Frame>

                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </VerticalStackLayout>
        </StackLayout>
    </RefreshView>
</ContentPage>