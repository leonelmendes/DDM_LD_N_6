<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:iTask_App_Mobile.ViewModels"
             x:Class="iTask_App_Mobile.Views.RegisterPage"
             Title="RegisterPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="20,10"
            Spacing="10"
            VerticalOptions="Center">

            <Image Source="voltar.png" HeightRequest="24" HorizontalOptions="Start">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding BackCommand}"/>
                </Image.GestureRecognizers>
            </Image>
            <!-- Logo -->
            <Image Source="logo_sem_fundo.png"
                   HeightRequest="150"
                   HorizontalOptions="Center"/>
            <!-- Títulos -->
            <Label
                Text="Criar Conta"
                FontFamily="InterBold"
                FontSize="28"
                TextColor="{StaticResource Black}"
                HorizontalOptions="Center"/>

            <Label
                Text="Preencha os dados para continuar"
                FontFamily="InterRegular"
                FontSize="15"
                TextColor="{StaticResource Gray500}"
                HorizontalOptions="Center"/>

            <!-- Inputs gerais -->
            <Frame Padding="10,3" CornerRadius="15" >
                <Entry Placeholder="Nome Completo"
                       Text="{Binding Nome}"
                       FontFamily="InterRegular"
                       PlaceholderColor="{StaticResource Gray400}"/>
            </Frame>

            <Frame Padding="10,3" CornerRadius="15" >
                <Entry Placeholder="Email"
                       FontFamily="InterRegular"
                       Text="{Binding Email}"
                       PlaceholderColor="{StaticResource Gray400}"/>
            </Frame>

            <Frame Padding="10,3" CornerRadius="15" >
                <Entry Placeholder="Username"
                       FontFamily="InterRegular"
                       Text="{Binding Username}"
                       PlaceholderColor="{StaticResource Gray400}"/>
            </Frame>

            <Frame Padding="10,3" CornerRadius="15" >
                <Entry Placeholder="Password" IsPassword="True"
                       FontFamily="InterRegular"
                       Text="{Binding Password}"
                       PlaceholderColor="{StaticResource Gray400}"/>
            </Frame>

            <!-- Campos Gestor -->
            <StackLayout IsVisible="{Binding IsGestor}">
                <Label Text="Departamento"
                       FontFamily="InterSemiBold"
                       Margin="0,15,0,5"/>

                <Frame Padding="10,3" CornerRadius="15" >
                    <Entry Placeholder="Departamento"
                           FontFamily="InterRegular"
                           Text="{Binding Departamento}"
                           PlaceholderColor="{StaticResource Gray400}"/>
                </Frame>

                <HorizontalStackLayout Margin="0,10">
                    <CheckBox IsChecked="{Binding IsAdmin}" />
                    <Label Text="É administrador?"
                           VerticalOptions="Center"
                           FontFamily="InterRegular"/>
                </HorizontalStackLayout>
            </StackLayout>

            <!-- Botão Registrar -->
            <Button Text="Registrar"
                    FontFamily="InterSemiBold"
                    BackgroundColor="{StaticResource Primary}"
                    Command="{Binding RegistrarGestorCommand}"
                    TextColor="White"
                    CornerRadius="10"
                    HeightRequest="50"
                    />

            <!-- Link para login -->
            <HorizontalStackLayout HorizontalOptions="Center">
                <Label Text="Já tem conta?"
                       FontFamily="InterRegular"
                       TextColor="{StaticResource Gray600}"/>
                <Label Text=" Entrar"
                       FontFamily="InterSemiBold"
                       TextColor="{StaticResource Primary}"
                       />
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>