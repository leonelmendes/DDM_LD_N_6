<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="iTask_App_Mobile.Views.RelatorioPage"
             Title="RelatorioPage">
    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">

            <!-- Título -->
            <VerticalStackLayout>
                <Label Text="Exportar Tarefas Concluídas"
                       FontFamily="InterSemiBold"
                       FontSize="22"
                       TextColor="{StaticResource Gray900}"/>

                <Label Text="O gestor poderá exportar todas as suas tarefas concluídas em formato CSV."
                       FontFamily="InterRegular"
                       FontSize="14"
                       TextColor="{StaticResource Gray600}"
                       Margin="0,4,0,0"/>
            </VerticalStackLayout>

            <!-- Botão Exportar -->
            <Frame CornerRadius="12"
                   HasShadow="False"
                   Padding="0"
                   BackgroundColor="{StaticResource Primary}">
                <Button Text="Exportar CSV"
                        FontFamily="InterSemiBold"
                        TextColor="White"
                        BackgroundColor="Transparent"
                        HeightRequest="52"/>
            </Frame>

            <!-- Descrição dos campos -->
            <Label Text="Campos incluídos: Programador, Descrição, Data Prevista Início, Data Prevista Fim, Tipo de Tarefa, Data Real Início, Data Real Fim."
                   FontFamily="InterLight"
                   FontSize="13"
                   TextColor="{StaticResource Gray700}"
                   LineBreakMode="WordWrap"/>

            <!-- Filtros -->
            <Grid ColumnDefinitions="*,*"
                  ColumnSpacing="12">

                <Frame BackgroundColor="{StaticResource Gray100}"
                       CornerRadius="12"
                       Padding="10"
                       BorderColor="{StaticResource Gray200}">
                    <Picker Title="Selecionar programador"
                            FontFamily="InterRegular"/>
                </Frame>

                <Frame BackgroundColor="{StaticResource Gray100}"
                       CornerRadius="12"
                       Padding="10"
                       BorderColor="{StaticResource Gray200}">
                    <Picker Title="Selecionar tipo de tarefa"
                            FontFamily="InterRegular"/>
                </Frame>

            </Grid>

            <Frame BackgroundColor="{StaticResource Gray100}"
                   CornerRadius="12"
                   Padding="10"
                   BorderColor="{StaticResource Gray200}">
                <Entry Placeholder="Intervalo de datas"
                       FontFamily="InterRegular"/>
            </Frame>

            <!-- Tabela -->
            <Frame BackgroundColor="White"
                   CornerRadius="16"
                   HasShadow="False"
                   BorderColor="{StaticResource Gray200}"
                   Padding="15">

                <VerticalStackLayout Spacing="14">

                    <!-- Cabeçalho da tabela -->
                    <Grid ColumnDefinitions="*,*"
                          RowDefinitions="Auto"
                          ColumnSpacing="10">

                        <Label Text="Programador"
                               FontFamily="InterSemiBold"
                               TextColor="{StaticResource Gray800}"/>

                        <Label Text="Descrição"
                               Grid.Column="1"
                               FontFamily="InterSemiBold"
                               TextColor="{StaticResource Gray800}"/>
                    </Grid>

                    <Grid ColumnDefinitions="*,*"
                          ColumnSpacing="10">
                        <Label Text="Data Prev. Início"
                               FontFamily="InterRegular"
                               FontSize="13"
                               TextColor="{StaticResource Gray600}"/>

                        <Label Text="Data Prev. Fim"
                               Grid.Column="1"
                               FontFamily="InterRegular"
                               FontSize="13"
                               TextColor="{StaticResource Gray600}"/>
                    </Grid>

                    <Grid ColumnDefinitions="*,*"
                          ColumnSpacing="10">
                        <Label Text="Tipo de Tarefa"
                               FontFamily="InterRegular"
                               FontSize="13"
                               TextColor="{StaticResource Gray600}"/>

                        <Label Text="Data Real Início"
                               Grid.Column="1"
                               FontFamily="InterRegular"
                               FontSize="13"
                               TextColor="{StaticResource Gray600}"/>
                    </Grid>

                    <Label Text="Data Real Fim"
                           FontFamily="InterRegular"
                           FontSize="13"
                           TextColor="{StaticResource Gray600}"/>

                    <BoxView HeightRequest="1"
                             Color="{StaticResource Gray200}"
                             Margin="0,4"/>

                    <!-- Linha de registros -->
                    <VerticalStackLayout Spacing="6">

                        <Grid ColumnDefinitions="*,*"
                              ColumnSpacing="10">
                            <Label Text="João Silva"
                                   FontFamily="InterMedium"
                                   TextColor="{StaticResource Gray800}"/>

                            <Label Text="Implementar API"
                                   Grid.Column="1"
                                   FontFamily="InterMedium"
                                   TextColor="{StaticResource Gray800}"/>
                        </Grid>

                        <Grid ColumnDefinitions="*,*"
                              ColumnSpacing="10">
                            <Label Text="01/10/2023"
                                   FontFamily="InterRegular"
                                   FontSize="13"
                                   TextColor="{StaticResource Gray700}"/>

                            <Label Text="05/10/2023"
                                   Grid.Column="1"
                                   FontFamily="InterRegular"
                                   FontSize="13"
                                   TextColor="{StaticResource Gray700}"/>
                        </Grid>

                        <Grid ColumnDefinitions="*,*"
                              ColumnSpacing="10">
                            <Label Text="Desenvolvimento"
                                   FontFamily="InterRegular"
                                   FontSize="13"
                                   TextColor="{StaticResource Gray700}"/>

                            <Label Text="02/10/2023"
                                   Grid.Column="1"
                                   FontFamily="InterRegular"
                                   FontSize="13"
                                   TextColor="{StaticResource Gray700}"/>
                        </Grid>

                        <Label Text="04/10/2023"
                               FontFamily="InterRegular"
                               FontSize="13"
                               TextColor="{StaticResource Gray700}"/>
                    </VerticalStackLayout>

                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>