<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="iTask_App_Mobile.Views.RelatorioPage"
             Title="RelatorioPage">
    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">

            <VerticalStackLayout>
                <Label Text="Exportar Tarefas Concluídas"
                       FontFamily="InterSemiBold"
                       FontSize="22"
                       TextColor="#111827"/>
                <Label Text="O gestor poderá exportar todas as suas tarefas concluídas em formato CSV."
                       FontFamily="InterRegular"
                       FontSize="14"
                       TextColor="#4B5563" 
                       Margin="0,4,0,0"/>
            </VerticalStackLayout>

            <Frame CornerRadius="12"
                   HasShadow="False"
                   Padding="0"
                   BackgroundColor="#2563EB" 
                   BorderColor="Transparent">
                <Button Text="Exportar CSV"
                        Command="{Binding ExportarCSVCommand}"
                        FontFamily="InterSemiBold"
                        TextColor="White"
                        BackgroundColor="Transparent"
                        HeightRequest="52"/>
            </Frame>

            <Label Text="Campos incluídos: Programador, Descrição, Data Prevista Início, Data Prevista Fim, Tipo de Tarefa, Data Real Início, Data Real Fim."
                   FontFamily="InterLight"
                   FontSize="13"
                   TextColor="#374151"
                   LineBreakMode="WordWrap"/>
            <BoxView HeightRequest="1" Color="#E5E7EB" Margin="0,10"/>

            <Label Text="Prévia do Arquivo (Exemplo)" FontFamily="InterSemiBold" FontSize="16"/>

            <Frame BackgroundColor="White"
                   CornerRadius="16"
                   HasShadow="True"
                   BorderColor="#E5E7EB"
                   Padding="15">

                <VerticalStackLayout Spacing="14">

                    <Grid ColumnDefinitions="*,*" RowDefinitions="Auto" ColumnSpacing="10">
                        <Label Text="Programador" FontFamily="InterSemiBold" TextColor="#1F2937"/>
                        <Label Text="Descrição" Grid.Column="1" FontFamily="InterSemiBold" TextColor="#1F2937"/>
                    </Grid>

                    <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                        <Label Text="Data Prev. Início" FontFamily="InterRegular" FontSize="13" TextColor="#4B5563"/>
                        <Label Text="Data Prev. Fim" Grid.Column="1" FontFamily="InterRegular" FontSize="13" TextColor="#4B5563"/>
                    </Grid>

                    <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                        <Label Text="Tipo de Tarefa" FontFamily="InterRegular" FontSize="13" TextColor="#4B5563"/>
                        <Label Text="Data Real Início" Grid.Column="1" FontFamily="InterRegular" FontSize="13" TextColor="#4B5563"/>
                    </Grid>

                    <Label Text="Data Real Fim" FontFamily="InterRegular" FontSize="13" TextColor="#4B5563"/>

                    <BoxView HeightRequest="1" Color="#E5E7EB" Margin="0,4"/>

                    <VerticalStackLayout Spacing="6">
                        <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                            <Label Text="João Silva" FontFamily="InterMedium" TextColor="#1F2937"/>
                            <Label Text="Implementar API" Grid.Column="1" FontFamily="InterMedium" TextColor="#1F2937"/>
                        </Grid>

                        <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                            <Label Text="01/10/2023" FontFamily="InterRegular" FontSize="13" TextColor="#374151"/>
                            <Label Text="05/10/2023" Grid.Column="1" FontFamily="InterRegular" FontSize="13" TextColor="#374151"/>
                        </Grid>

                        <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                            <Label Text="Backend" FontFamily="InterRegular" FontSize="13" TextColor="#374151"/>
                            <Label Text="02/10/2023" Grid.Column="1" FontFamily="InterRegular" FontSize="13" TextColor="#374151"/>
                        </Grid>

                        <Label Text="04/10/2023" FontFamily="InterRegular" FontSize="13" TextColor="#374151"/>
                    </VerticalStackLayout>

                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>