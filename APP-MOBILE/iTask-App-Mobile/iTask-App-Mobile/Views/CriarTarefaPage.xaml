<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="iTask_App_Mobile.Views.CriarTarefaPage"
             Title="CriarTarefaPage">
    <ScrollView>
        <VerticalStackLayout Spacing="0">

            <!-- Header azul misturado com o estilo dos dashboards -->
            <Grid BackgroundColor="{StaticResource Primary}"
                  Padding="16,40,16,16"
                  RowDefinitions="Auto,Auto">

                <Grid ColumnDefinitions="Auto,*,Auto">
                    <Image Source="back_placeholder.png"
                           WidthRequest="22"
                           HeightRequest="22"
                           VerticalOptions="Center"/>

                    <Label Grid.Column="1"
                           Text="Nova Tarefa"
                           FontFamily="InterSemiBold"
                           FontSize="20"
                           TextColor="White"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>

                    <Image Grid.Column="2"
                           Source="user_photo.png"
                           WidthRequest="32"
                           HeightRequest="32"
                           HorizontalOptions="End"
                           VerticalOptions="Center"/>
                </Grid>

                <Label Grid.Row="1"
                       Text="Crie uma nova tarefa e atribua a um programador."
                       FontFamily="InterRegular"
                       FontSize="13"
                       TextColor="#E5F3FF"
                       Margin="0,10,0,0"/>
            </Grid>

            <!-- Conteúdo -->
            <VerticalStackLayout Padding="20" Spacing="18">

                <!-- Título -->
                <Label Text="Título da tarefa"
                       FontFamily="InterSemiBold"
                       FontSize="14"
                       TextColor="{StaticResource Gray800}"/>
                <Entry Placeholder="Digite o título da tarefa"
                       FontFamily="InterRegular"
                       BackgroundColor="{StaticResource Gray100}"
                       HeightRequest="48"
                       PlaceholderColor="{StaticResource Gray400}"/>

                <!-- Descrição -->
                <Label Text="Descrição"
                       FontFamily="InterSemiBold"
                       FontSize="14"
                       TextColor="{StaticResource Gray800}"/>
                <Editor Placeholder="Descreva os detalhes da tarefa"
                        FontFamily="InterRegular"
                        BackgroundColor="{StaticResource Gray100}"
                        AutoSize="TextChanges"
                        HeightRequest="110"
                        PlaceholderColor="{StaticResource Gray400}"/>

                <!-- Data limite -->
                <Label Text="Data limite"
                       FontFamily="InterSemiBold"
                       FontSize="14"
                       TextColor="{StaticResource Gray800}"/>
                <Grid ColumnDefinitions="*,Auto"
                      BackgroundColor="{StaticResource Gray100}"
                      HeightRequest="48"
                      Padding="10"
                      VerticalOptions="Center">
                    <Label Text="dd/mm/aaaa"
                           VerticalOptions="Center"
                           FontFamily="InterRegular"
                           TextColor="{StaticResource Gray400}"/>
                    <Image Grid.Column="1"
                           Source="calendar_placeholder.png"
                           WidthRequest="22"
                           HeightRequest="22"
                           VerticalOptions="Center"/>
                </Grid>

                <!-- Estado -->
                <Label Text="Estado"
                       FontFamily="InterSemiBold"
                       FontSize="14"
                       TextColor="{StaticResource Gray800}"/>
                <Frame CornerRadius="10"
                       BackgroundColor="{StaticResource Gray100}"
                       Padding="12,8">
                    <Picker Title="Selecione o estado"
                            FontFamily="InterRegular">
                        <Picker.Items>
                            <x:String>To Do</x:String>
                            <x:String>Doing</x:String>
                            <x:String>Done</x:String>
                        </Picker.Items>
                    </Picker>
                </Frame>

                <!-- Tipo de Tarefa -->
                <Label Text="Tipo de tarefa"
                       FontFamily="InterSemiBold"
                       FontSize="14"
                       TextColor="{StaticResource Gray800}"/>
                <Frame CornerRadius="10"
                       BackgroundColor="{StaticResource Gray100}"
                       Padding="12,8">
                    <Picker Title="Selecione o tipo"
                            FontFamily="InterRegular"/>
                </Frame>

                <!-- Atribuir a -->
                <Label Text="Atribuir a"
                       FontFamily="InterSemiBold"
                       FontSize="14"
                       TextColor="{StaticResource Gray800}"/>
                <Frame CornerRadius="10"
                       BackgroundColor="{StaticResource Gray100}"
                       Padding="12,8">
                    <Picker Title="Selecione um programador"
                            FontFamily="InterRegular"/>
                </Frame>

                <!-- Botão -->
                <Button Text="✓  Salvar Tarefa"
                        FontFamily="InterSemiBold"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="White"
                        CornerRadius="14"
                        HeightRequest="52"
                        Margin="0,10,0,20"/>
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>