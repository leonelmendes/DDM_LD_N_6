<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="iTask_App_Mobile.Views.TarefaConcluidaPage"
             Title="TarefaConcluidaPage">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Header -->
            <Label Text="Tarefas Concluídas"
                   FontFamily="InterSemiBold"
                   FontSize="22"
                   TextColor="{StaticResource Gray900}"/>

            <!-- Lista de tarefas -->
            <VerticalStackLayout Spacing="12">

                <!-- Item da tarefa -->
                <Frame BackgroundColor="White"
                       CornerRadius="16"
                       BorderColor="{StaticResource Gray200}"
                       HasShadow="False"
                       Padding="16">

                    <VerticalStackLayout Spacing="10">

                        <Label Text="Implementar API"
                               FontFamily="InterSemiBold"
                               FontSize="17"/>

                        <Label Text="Descrição breve da tarefa"
                               FontFamily="InterRegular"
                               FontSize="14"
                               TextColor="{StaticResource Gray600}"/>

                        <Grid ColumnDefinitions="*,*">
                            <Label Text="Tempo previsto: 4 dias"
                                   FontFamily="InterRegular"
                                   FontSize="13"
                                   TextColor="{StaticResource Gray700}"/>

                            <Label Text="Tempo real: 3 dias"
                                   Grid.Column="1"
                                   FontFamily="InterSemiBold"
                                   FontSize="13"
                                   TextColor="{StaticResource Primary}"
                                   HorizontalOptions="End"/>
                        </Grid>

                    </VerticalStackLayout>

                </Frame>

                <!-- Copiar e repetir mais frames conforme necessário -->

            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>