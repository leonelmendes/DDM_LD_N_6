<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="iTask_App_Mobile.Views.TarefaConcluidaPage"
             xmlns:vm="clr-namespace:iTask_App_Mobile.ViewModels"
             xmlns:dto="clr-namespace:iTask_App_Mobile.DTOs"
             Title="TarefaConcluidaPage">
    
    <RefreshView Command="{Binding CarregarTarefasCommand}" IsRefreshing="{Binding IsLoading}">
        <ScrollView>
            <VerticalStackLayout Padding="20" Spacing="20">

                <Label Text="Tarefas Concluídas"
                       FontFamily="InterSemiBold"
                       FontSize="22"
                       TextColor="{StaticResource Gray900}"/>

                <CollectionView ItemsSource="{Binding TarefasConcluidas}">
                    <CollectionView.EmptyView>
                        <Label Text="Nenhuma tarefa concluída ainda." 
                               TextColor="Gray" 
                               HorizontalOptions="Center" 
                               Margin="0,50,0,0"/>
                    </CollectionView.EmptyView>

                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="dto:TarefaDetalhesDTO">

                            <Frame BackgroundColor="White"
                                   CornerRadius="16"
                                   BorderColor="{StaticResource Gray200}"
                                   HasShadow="False"
                                   Padding="16"
                                   Margin="0,0,0,12">

                                <VerticalStackLayout Spacing="10">

                                    <Label Text="{Binding Titulo}"
                                           FontFamily="InterSemiBold"
                                           FontSize="17"
                                           TextColor="{StaticResource Gray900}"/>

                                    <Label Text="{Binding Descricao}"
                                           FontFamily="InterRegular"
                                           FontSize="14"
                                           TextColor="{StaticResource Gray600}"
                                           LineBreakMode="TailTruncation"
                                           MaxLines="2"/>

                                    <BoxView HeightRequest="1" Color="{StaticResource Gray100}" Margin="0,5"/>

                                    <Grid ColumnDefinitions="*,*">

                                        <VerticalStackLayout Grid.Column="0">
                                            <Label Text="Tempo previsto:" 
                                                   FontSize="12" TextColor="{StaticResource Gray500}"/>
                                            <Label Text="{Binding TempoPrevistoTexto}"
                                                   FontFamily="InterRegular"
                                                   FontSize="13"
                                                   TextColor="{StaticResource Gray900}"/>
                                        </VerticalStackLayout>

                                        <VerticalStackLayout Grid.Column="1" HorizontalOptions="End">
                                            <Label Text="Tempo real:" 
                                                   FontSize="12" TextColor="{StaticResource Gray500}" HorizontalOptions="End"/>
                                            <Label Text="{Binding TempoRealTexto}"
                                                   FontFamily="InterSemiBold"
                                                   FontSize="13"
                                                   TextColor="{StaticResource Primary}"
                                                   HorizontalOptions="End"/>
                                        </VerticalStackLayout>
                                    </Grid>

                                </VerticalStackLayout>
                            </Frame>

                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </VerticalStackLayout>
        </ScrollView>
    </RefreshView>
</ContentPage>